<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:fitsSystemWindows="true"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<RelativeLayout
		android:background="@drawable/ue_login_bg"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<RelativeLayout
		android:id="@+id/rl_1"
		android:layout_width="fill_parent"
		android:layout_height="140.0dip"
		android:layout_marginLeft="18.0dip"
		android:layout_marginRight="18.0dip"
		android:layout_marginTop="120.0dip"
		android:background="@drawable/de_login_rect_white">

		<RelativeLayout
			android:id="@+id/layoutPhone"
			android:layout_width="fill_parent"
			android:layout_height="45.0dip">

			<ImageView
				android:id="@+id/imgPhone"
				android:layout_width="15.0dip"
				android:layout_height="18.0dip"
				android:layout_centerVertical="true"
				android:layout_marginLeft="10.0dip"
				android:background="@drawable/ue_login_phone" />

			<EditText
				android:id="@+id/phone"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_toRightOf="@+id/imgPhone"
				android:background="@null"
				android:hint="手机号"
				android:inputType="number"
				android:maxLength="11"
				android:paddingLeft="15.0dip"
				android:singleLine="true"
				android:textColor="#ff111111"
				android:textColorHint="#ffaaaaaa"
				android:textSize="16.0sp" />

			<ImageView
				android:id="@+id/imgCancel"
				android:layout_width="16.0dip"
				android:layout_height="16.0dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="12.0dip"
				android:background="@drawable/de_cancel_phone"
				android:visibility="invisible" />
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="45.0dip"
			android:layout_below="@+id/layoutPhone"
			android:id="@+id/relativeLayout">

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="0.5dip"
				android:background="#ffdddddd" />

			<ImageView
				android:id="@+id/imgCode"
				android:layout_width="15.0dip"
				android:layout_height="18.0dip"
				android:layout_centerVertical="true"
				android:layout_marginLeft="10.0dip"
				android:background="@drawable/ue_login_lock" />

			<EditText
				android:id="@+id/tv_pwd"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_toRightOf="@+id/imgCode"
				android:background="@null"
				android:hint="密码"
				android:inputType="textPassword"
				android:maxLength="13"
				android:paddingLeft="15.0dip"
				android:singleLine="true"
				android:textColor="#ff111111"
				android:textColorHint="#ffaaaaaa"
				android:textSize="16.0sp" />

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="45.0dip"
			android:layout_below="@+id/relativeLayout"
			android:layout_alignParentStart="true">

			<EditText
				android:id="@+id/code"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_toRightOf="@+id/imageView2"
				android:background="@null"
				android:hint="验证码"
				android:inputType="number"
				android:maxLength="6"
				android:paddingLeft="15.0dip"
				android:singleLine="true"
				android:textColor="#ff111111"
				android:textColorHint="#ffaaaaaa"
				android:textSize="16.0sp" />

			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="0.5dip"
				android:background="#ffdddddd" />

			<ImageView
				android:id="@+id/imageView2"
				android:layout_width="15.0dip"
				android:layout_height="18.0dip"
				android:layout_centerVertical="true"
				android:layout_marginLeft="10.0dip"
				android:background="@drawable/ue_login_lock" />

			<Button
				android:id="@+id/btn_code"
				android:layout_width="94.0dip"
				android:layout_height="33.0dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="10.0dip"
				android:background="@drawable/de_login_yzm_oval_shape_gray"
				android:clickable="false"
				android:enabled="false"
				android:text="获取验证码"
				android:textColor="#ff888888"
				android:textSize="14.0sp" />
		</RelativeLayout>
	</RelativeLayout>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:text="请先阅读 使用条款和隐私声明"
			android:id="@+id/tv_note"
			android:layout_marginTop="15dp"
			android:textColor="@color/white"
			android:layout_below="@+id/rl_1"
			android:layout_alignStart="@+id/rl_1" />

		<Button
		android:id="@+id/btnSure"
		android:layout_width="fill_parent"
		android:layout_height="40.0dip"
		android:layout_below="@+id/rl_1"
		android:layout_marginLeft="18.0dip"
		android:layout_marginRight="18.0dip"
		android:layout_marginTop="60.0dip"
		android:background="@drawable/de_btn_bg_gray"
		android:clickable="true"
		android:enabled="true"
		android:text="注册"
		android:textColor="#ffffffff"
		android:textSize="18.0sp" />

	<Button
		android:id="@+id/btnClose"
		android:layout_width="20.0dip"
		android:layout_height="20.0dip"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="40.0dip"
		android:background="@drawable/ue_login_close" />

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:id="@+id/tv_load"
			android:layout_margin="10dp"
			android:layout_above="@+id/btnClose"
			android:layout_below="@+id/btnSure"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" />

	</RelativeLayout>
</RelativeLayout>