<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/am_bg_g"
    >



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/img_photo"
                    android:src="@android:drawable/stat_sys_phone_call_on_hold"
                    android:background="@color/bg_color"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginStart="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/tv_carname"
                    android:layout_alignTop="@+id/img_photo"
                    android:layout_toEndOf="@+id/img_photo"
                    android:layout_marginStart="34dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Medium Text"
                    android:id="@+id/tv_cartype"
                    android:layout_below="@+id/tv_carname"
                    android:layout_alignStart="@+id/tv_carname" />

            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/white"
                android:layout_marginBottom="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="排量"
                        android:layout_column="1"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/tv_displacement"
                        android:layout_column="28" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="发布年份"
                        android:layout_column="1"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/tv_releaseTime"
                        android:layout_column="28" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="整车质量"
                        android:id="@+id/textView12"
                        android:layout_column="1"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/tv_weight"
                        android:layout_column="28" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="变速类型"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/tv_derailleur"
                        android:layout_column="28" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp">

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="档位"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/tv_gears"
                        android:layout_column="28" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/white"
                android:layout_marginBottom="10dp" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="前轮轮胎型号"
                        android:layout_column="1"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="请选择轮胎型号"
                        android:textColor="@color/blue"
                        android:id="@+id/tv_ftyre"
                        android:layout_column="28" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp" >

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="后轮轮胎型号"
                        android:layout_column="1"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="请选择轮胎型号"
                        android:id="@+id/tv_btyre"
                        android:textColor="@color/blue"
                        android:layout_column="28" />
                </TableRow>

            </TableLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="车厂建议轮胎气压(Bar)"
                android:id="@+id/textView20"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_marginBottom="1dp"
                android:background="@color/white"
                android:textColor="@color/black" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:visibility="gone"
                android:background="@color/white"
                android:layout_marginBottom="10dp" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="最低值"
                        android:id="@+id/textView21"
                        android:layout_column="2"
                        android:layout_margin="5dp"
                        android:textColor="#586648" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="被推荐"
                        android:id="@+id/textView22"
                        android:layout_column="3"
                        android:layout_margin="5dp"
                        android:textColor="#152774" />

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="最高值"
                        android:id="@+id/textView23"
                        android:layout_column="4"
                        android:layout_margin="5dp"
                        android:textColor="#e58383"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp" >

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="前轮胎(FRP)"
                        android:layout_column="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/edf_min"
                        android:text="1.8"
                        android:maxLength="3"
                        android:inputType="numberDecimal"
                        android:layout_column="2" />

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:maxLength="3"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/edf_mid"
                        android:text="2.4"
                        android:layout_column="3" />

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:maxLength="3"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/edf_max"
                        android:text="3.2"
                        android:layout_column="4" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp" >

                    <TextView
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="后轮胎(RRP)"
                        android:layout_column="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:maxLength="3"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/edb_min"
                        android:text="1.8"
                        android:layout_column="2" />

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:maxLength="3"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/edb_mid"
                        android:text="2.4"
                        android:layout_column="3" />

                    <EditText
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:maxLength="3"
                        android:inputType="numberDecimal"
                        android:ems="10"
                        android:id="@+id/edb_max"
                        android:text="3.2"
                        android:layout_column="4" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </TableLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@color/white">
                <TextView
                    style="@style/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="低压报警值（Bar）"
                    android:textColor="@color/colorPrimary" />

                <View
                    style="@style/divider_line_1dp_gray"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <SeekBar
                        style="@style/Widget.AppCompat.SeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="9"
                        android:progress="1"
                        android:id="@+id/lowPress_seekBar" />
                    <TextView
                        style="@style/line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="1.8"
                        android:id="@+id/lowPressValue"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <TextView
                    style="@style/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="高压报警值（Bar）"
                    android:textColor="@color/colorPrimary" />

                <View
                    style="@style/divider_line_1dp_gray"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <SeekBar
                        style="@style/Widget.AppCompat.SeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="13"
                        android:progress="5"
                        android:id="@+id/highPress_seekBar" />
                    <TextView
                        style="@style/line"
                        android:id="@+id/highPressValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="3.2"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>
                <TextView
                    style="@style/line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="高温报警值（℃）"
                    android:textColor="@color/colorPrimary" />

                <View
                    style="@style/divider_line_1dp_gray"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <SeekBar
                        style="@style/Widget.AppCompat.SeekBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="40"
                        android:progress="14"
                        android:id="@+id/highTemp_seekBar" />
                    <TextView
                        style="@style/line"
                        android:id="@+id/highTempValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="65"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/btn_add" />
</LinearLayout>